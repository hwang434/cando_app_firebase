<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background">
        <!-- 메인 로그인 화면에 공통으로 들어갈 헤더 -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentcontainerview_login_header"
            android:name="com.goodee.cando_app.views.HeaderFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout="@layout/fragment_header" />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearlayout_login_idform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/fragmentcontainerview_login_header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/textview_login_idpointer"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:labelFor="@id/edittext_login_emailinput"
                android:text="@string/login_id_pointer"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/edittext_login_emailinput"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragmentcontainerview_login_header"/>

            <EditText
                android:id="@+id/edittext_login_emailinput"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:inputType="textWebEditText"
                android:minHeight="48dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintHorizontal_weight=".70"
                app:layout_constraintStart_toEndOf="@+id/textview_login_idpointer"
                app:layout_constraintTop_toBottomOf="@+id/fragmentcontainerview_login_header"
                android:autofillHints="username"
                tools:text="blahblah@naver.com"/>
            <TextView
                android:id="@+id/textview_login_passwordpointer"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:labelFor="@id/edittext_login_passwordinput"
                android:text="@string/login_password_pointer"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textview_login_idpointer" />
            <EditText
                android:id="@+id/edittext_login_passwordinput"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/textview_login_passwordpointer"
                app:layout_constraintStart_toEndOf="@+id/textview_login_passwordpointer"
                android:autofillHints="password"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <Button
            android:id="@+id/button_login_loginbutton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/login_login"
            style="@style/main_button"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearlayout_login_idform" />
        <Button
            android:id="@+id/button_login_findmember"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/login_find_member"
            style="@style/main_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_login_loginbutton" />
        <Button
            android:id="@+id/button_login_registerbutton"
            style="@style/main_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/login_register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_login_findmember" />
        <ProgressBar
            android:id="@+id/progressbar_login_loading"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:translationZ="2dp"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_centerInParent="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="invisible"
            android:clickable="true"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>