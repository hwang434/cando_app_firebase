<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.diary.DiaryViewFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textview_diaryview_titleview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/textview_diary_view_author_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@id/textview_diaryview_titleview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textview_diaryview_contentview"/>
        <TextView
            android:id="@+id/textview_diaryview_contentview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="13sp"
            android:scrollbars="vertical"
            android:padding="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_diary_view_author_view"
            app:layout_constraintBottom_toTopOf="@id/button_diaryview_editbutton" />
        <Button
            android:id="@+id/button_diaryview_editbutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/diary_view_edit_button"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_diaryview_deletebutton"
            app:layout_constraintTop_toBottomOf="@id/textview_diaryview_contentview"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/button_diaryview_deletebutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/diary_view_delete_button"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/button_diaryview_editbutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_diaryview_contentview"/>

        <ProgressBar
            android:id="@+id/progressbar_diaryview_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>