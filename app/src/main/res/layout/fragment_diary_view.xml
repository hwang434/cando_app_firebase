<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.diary.DiaryViewFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/progressbar_diaryview_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ScrollView
            android:id="@+id/scrollview_diary_view_board_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textview_diaryview_titleview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="제목"
                    android:textSize="18sp"
                    android:background="@drawable/box_border"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/textview_diary_view_author_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="작성자"
                    android:textSize="18sp"
                    android:background="@drawable/box_border"
                    app:layout_constraintBottom_toTopOf="@id/textview_diaryview_contentview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textview_diaryview_titleview"
                    app:layout_constraintVertical_chainStyle="spread_inside" />
                <TextView
                    android:id="@+id/textview_diaryview_contentview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/textview_diary_view_author_view"
                    app:layout_constraintBottom_toTopOf="@id/button_diaryview_editbutton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/box_border"
                    android:text="내용\n내용\n내용\n내용\n내용"/>
                <Button
                    android:id="@+id/button_diary_view_like_button"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="좋아요 수"
                    android:gravity="center"
                    android:background="@drawable/box_border"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textview_diaryview_contentview"/>
                <Button
                    android:id="@+id/button_diaryview_editbutton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/diary_view_edit_button"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/button_diaryview_deletebutton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button_diary_view_like_button" />
                <Button
                    android:id="@+id/button_diaryview_deletebutton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/diary_view_delete_button"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/button_diaryview_editbutton"
                    app:layout_constraintTop_toBottomOf="@id/button_diary_view_like_button" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>
</layout>