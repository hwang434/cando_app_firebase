<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.user.FindPasswordFragment">

        <TextView
            android:id="@+id/textview_findid_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/find_id_header"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_findid_namelabel"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/find_id_name_label"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_findid_header"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edittext_findid_nameinput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:textSize="16sp"
            android:hint="@string/find_id_name_input"
            android:paddingStart="10dp"
            android:inputType="text"
            android:autofillHints="name"
            app:layout_constraintBaseline_toBaselineOf="@+id/textview_findid_namelabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textview_findid_namelabel" />
        <TextView
            android:id="@+id/textview_findid_phone_label"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:text="@string/find_id_phone_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_findid_namelabel"/>

        <EditText
            android:id="@+id/edittext_findid_emailinput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:hint="010-0000-0000"
            android:paddingStart="10dp"
            android:inputType="phone"
            android:autofillHints="emailAddress"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textview_findid_phone_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textview_findid_phone_label" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_findid_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="@string/find_id_submit"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/textview_findid_phone_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>