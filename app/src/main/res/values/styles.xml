<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_header">
        <item name="android:padding">10dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">18</item>
        <item name="android:shadowDy">13</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="main_button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/main_radius_button</item>
    </style>
    <style name="register_pointer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">#5E706E</item>
        <item name="android:textColor">#EEEEEE</item>
        <item name="minHeight">52dp</item>
    </style>
    <style name="register_input">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColorHint">#78909C</item>
        <item name="minHeight">52dp</item>
    </style>
</resources>